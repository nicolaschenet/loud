<div class="pusher">
  <div class="ui inverted teal vertical masthead center aligned segment">
    <div class="ui text container">
      <h1 class="ui inverted header">
        <i class="sound icon"></i>
      </h1>
      <p>Your. Music.</p>
      {{#unless soundcloud.isConnected}}
        <div class="ui hidden divider"></div>
        <div class="ui container">
          {{sc-connect-button}}
        </div>
      {{/unless}}
    </div>
  </div>

  {{#if player.track}}
    <div class="ui inverted vertical center aligned segment" style="padding:1em;">
      <div class="ui middle aligned stackable grid container">
        <div class="row">
          <div class="one wide column">
            <img class="ui tiny image" src="{{player.track.artwork_url}}">
          </div>
          <div class="fifteen wide column">
            {{#ui-progress percent=player.timePct classNames="tiny inverted teal"}}
              <div class="bar"></div>
              <div class="label">
                {{#if player.isPlaying}}
                  <i class="notched circle loading icon"></i>
                {{/if}}
                {{player.track.user.username}} / {{player.track.title}}
              </div>
            {{/ui-progress}}
          </div>
        </div>
      </div>
    </div>
  {{/if}}

  {{#if soundcloud.user}}
    <div class="ui vertical stripe segment">
      <div class="ui top aligned stackable grid container">
        <div class="row">
          <div class="four wide column">
            {{sc-user-card user=soundcloud.user}}
          </div>
          <div class="twelve wide column">
            <div class="ui medium header">{{soundcloud.user.first_name}}'s favorites</div>
            <div class="ui divider"></div>
            <div class="ui items">
              {{#each soundcloud.user.favorites as |track|}}
                {{sc-track track=track}}
                <div class="ui divider"></div>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/if}}

  <div class="ui inverted vertical footer segment">
    <div class="ui container">
      <div class="ui stackable inverted divided equal height stackable grid">
        <div class="three wide column">
          <h4 class="ui inverted header">About</h4>
          <div class="ui inverted link list">
            <a href="#" class="item">Sitemap</a>
            <a href="#" class="item">Contact Us</a>
            <a href="#" class="item">Religious Ceremonies</a>
            <a href="#" class="item">Gazebo Plans</a>
          </div>
        </div>
        <div class="three wide column">
          <h4 class="ui inverted header">Services</h4>
          <div class="ui inverted link list">
            <a href="#" class="item">Banana Pre-Order</a>
            <a href="#" class="item">DNA FAQ</a>
            <a href="#" class="item">How To Access</a>
            <a href="#" class="item">Favorite X-Men</a>
          </div>
        </div>
        <div class="seven wide column">
          <h4 class="ui inverted header">Footer Header</h4>
          <p>Extra space for a call to action inside the footer that could help re-engage users.</p>
        </div>
      </div>
    </div>
  </div>
</div>

{{outlet}}
