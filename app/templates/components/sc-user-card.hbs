<div class="blurring dimmable image">
  <div class="ui dimmer">
    <div class="content">
      <div class="center">
        <a href={{user.permalink_url}} target="_blank" class="ui inverted button">View Profile</a>
      </div>
    </div>
  </div>
  <img src={{avatarURL}}>
</div>
<div class="content">
  <a class="header">{{user.full_name}}</a>
  <div class="meta">
    <span class="right floated">{{user.kind}}</span>
    {{user.city}}<br>
    <strong>{{user.country}}</strong>
  </div>
  <div class="description">
    {{user.description}}
  </div>
</div>
<div class="extra content">
  <span class="right floated">
    <i class="heart outline like icon"></i>
      {{user.followings_count}} followings
    </span>
    <i class="comment icon"></i>
    {{user.followers_count}} followers
</div>
